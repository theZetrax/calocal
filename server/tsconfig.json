{
  "compilerOptions": {
    "lib": [
      "ES5",
      "ES6"
    ],
    "module": "commonjs",
    "target": "ES5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "rootDirs": ["./config", "./src"],
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "@app/*": ["src/*"],
      "@utils/*": ["src/utils/*"],
      "@config/*": ["config/*"]
    },
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
